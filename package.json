{
    "name": "nodejs-ts-microservice",
    "version": "0.0.1",
    "description": "A NodeJS TypeScript Microservice API based on the Clean Architecture",
    "main": "app.ts",
    "scripts": {
        "test": "mocha -r ts-node/register src/**/**.spec.ts",
        "test:dev": "mocha -r ts-node/register src/**/**.spec.ts --watch --watch-extensions ts",
        "dev": "nodemon src/app.ts",
        "dev:debug": "nodemon --inspect src/app.ts",
        "lint": "tslint --project ./tsconfig.json src/**/*.ts"
    },
    "pre-push": [
        "lint"
    ],
    "keywords": [
        "NodeJS",
        "API",
        "Clean",
        "TypeScript",
        "Microservice"
    ],
    "author": "Ny Andrianina Mamy R.",
    "license": "ISC",
    "devDependencies": {
        "@types/chai": "^4.2.4",
        "@types/dotenv": "^6.1.1",
        "@types/express": "^4.17.1",
        "@types/mocha": "^5.2.7",
        "@types/mongodb": "^3.3.2",
        "@types/mongoose": "^5.5.23",
        "@types/morgan": "^1.7.37",
        "@types/node": "^12.7.5",
        "@types/winston": "^2.4.4",
        "chai": "^4.2.0",
        "mocha": "^6.2.2",
        "nodemon": "^1.19.2",
        "pre-push": "^0.1.1",
        "ts-node": "^8.4.1",
        "tslint": "^5.20.0",
        "tslint-sonarts": "^1.9.0",
        "typescript": "^3.6.3"
    },
    "dependencies": {
        "body-parser": "^1.19.0",
        "cuid": "^2.1.6",
        "dotenv": "^8.1.0",
        "express": "^4.17.1",
        "mongodb": "^3.3.2",
        "mongoose": "^5.7.6",
        "morgan": "^1.9.1",
        "winston": "^3.2.1"
    }
}
